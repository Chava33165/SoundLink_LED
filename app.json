{
  "expo": {
    "name": "SoundLink_LED",
    "slug": "SoundLink_LED",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logoo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logoo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "La app necesita acceso a Bluetooth para conectarse y controlar el v√∫metro LED mediante el ESP32."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logoo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.salvadorxx.SoundLinkLED"
    },
    "web": {
      "favicon": "./assets/logoo.png"
    },
    "extra": {
      "eas": {
        "projectId": "069aa5d4-912b-4a05-96d6-9e22b3a4580d"
      }
    },
    "plugins": [
      "react-native-ble-plx"
    ],
    "owner": "salvadorxx"
  }
}
